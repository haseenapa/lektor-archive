#!/bin/bash

HERE="$(cd "$(dirname "$0")"; pwd)"
BASE="$HERE/.."
OUT="$BASE/build"
TMP="$OUT/tmp"

FRAMEWORK="$OUT/Python.framework"

rm -rf "$TMP" "$FRAMEWORK"
mkdir "$TMP"
PYTHON_PKG_URL=https://www.python.org/ftp/python/2.7.10/python-2.7.10-macosx10.6.pkg
wget "$PYTHON_PKG_URL" -O "$TMP/python.pkg"
pkgutil --expand "$TMP/python.pkg" "$TMP/pythonpkg-extracted"
mkdir "$OUT/Python.framework"
cd "$OUT/Python.framework"
tar xf "$TMP/pythonpkg-extracted/Python_Framework.pkg/Payload"
rm -rf "$TMP"
